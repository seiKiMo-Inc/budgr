{
    "extends": "@repo/typescript-config/backend.json",
    "compilerOptions": {
        "strict": true,
        "types": ["bun-types"],
        "noEmit": true,
        "allowImportingTsExtensions": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"],
            "@lib/*": ["./src/lib/*"],
            "@models/*": ["./src/models/*"],
            "@controllers/*": ["./src/controllers/*"],
            "@test/*": ["./test/*"]
        }
    }
}
